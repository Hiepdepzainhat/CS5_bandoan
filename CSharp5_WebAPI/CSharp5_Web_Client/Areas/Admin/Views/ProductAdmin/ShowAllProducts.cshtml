@using CSharp5_Share.Models;
@model IEnumerable<CSharp5_Share.Models.Products>

@{
    ViewData["Title"] = "ShowAllProducts";
    List<string> imageExtension = new List<string>() // list chứa đuôi định dạng của ảnh
    {
        ".png", ".jpg", ".jpeg", ".gif", ".tiff", ".pdf", ".webp"
    };
    var listCategorie = ViewBag.Categorie as List<Categories>;
    var listChef = ViewBag.Chef as List<Chef>;
    var listProducer = ViewBag.Producer as List<Producer>;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}

<a asp-action="CreateProducts" class="btn btn-primary">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                Category
            </th>
            <th>
                Producer
            </th>
            <th>
                Chef
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVoucher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                ImagesProducts
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @{
                        foreach (Categories categories in listCategorie)
                        {
                            if (item.CategoryID == categories.CategoryID)
                            {
                                <p>@categories.CategoryName</p>
                                ;
                            }
                        }
                    }
                </td>
                <td>
                    @{
                        foreach (Producer p in listProducer)
                        {
                            if (item.ProducerID == p.ProducerID)
                            {
                                <p>@p.ProducerName</p>
                                ;
                            }
                        }
                    }
                </td>
                <td>
                    @{
                        foreach (Chef c in listChef)
                        {
                            if (item.ChefID == c.ChefID)
                            {
                                <p>@c.ChefName</p>
                                ;
                            }
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdVoucher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @{
                        string extension = System.IO.Path.GetExtension(item.Desciption);
                    }
                    @if (imageExtension.Contains(extension.Trim()))
                    {
                        <img src="~/images/@item.Desciption" height="100px">
                    }
                    else
                    {
                        <img src="~/images/default.png" height="100px">
                    }
                </td>
                <td>
                    <a asp-action="EditProducts" asp-route-id="@item.ProductID" class="btn btn-primary" asp-controller="ProductAdmin" asp-area="Admin">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                        </svg>
                    </a>
                    <a asp-action="ProductsDetail" asp-route-id="@item.ProductID" class="btn btn-primary" asp-controller="ProductAdmin" asp-area="Admin">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16"><path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" /><path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" /></svg>
                    </a>
                    <a asp-action="DeleteProducts" asp-route-id="@item.ProductID" class="btn btn-primary" asp-controller="ProductAdmin" asp-area="Admin">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16"><path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" /></svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
