@model IEnumerable<CSharp5_Share.Models.Products>

@{
    ViewData["Title"] = "ShowAllProductsHome";
    List<string> imageExtension = new List<string>()
    {
        ".png", ".jpg", ".jpeg", ".gif", ".tiff", ".pdf", ".webp"
    };
}
<div class="row" style="margin-top: 50px">
    @foreach (var item in Model) {
          <div class="col-md-3" style="margin-top:30px">
            <div class="thumbnail">
                <img src="~/images/@item.Desciption" alt="Lights" style="width:100%;object-fit:cover">
                <div class="caption" style="padding:20px">
                    <p style="font-weight:bold;color:black;">@Html.DisplayFor(modelItem => item.ProductName)</p>
                    <p style="font-weight:bold;color:red">@Html.DisplayFor(modelItem => item.Price),000 ₫ <span style="font-weight:normal;color:gray;margin-left:20px">Số lượng còn : @Html.DisplayFor(modelItem => item.Quantity)</span></p>
                </div>
            </div>
            <div class="container">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-primary">Tìm hiểu thêm</a>
            </div>
          </div>
          
    }
</div>
