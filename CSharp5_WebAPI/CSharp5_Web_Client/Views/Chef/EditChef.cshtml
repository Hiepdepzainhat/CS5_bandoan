@model CSharp5_Share.Models.Chef

@{
    ViewData["Title"] = "EditChef";
}

<h1>EditChef</h1>

<h4>Chef</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditChef">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="ChefName" class="control-label"></label>
                <input asp-for="ChefName" class="form-control" />
                <span asp-validation-for="ChefName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChefDescription" class="control-label"></label>
                <input asp-for="ChefDescription" class="form-control" />
                <span asp-validation-for="ChefDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowAllChef">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
