@model CSharp5_Share.Models.Bill
<!DOCTYPE html>
<html>
<head>
	<title>Hóa đơn</title>
	<style>
		.ctn {
			display: flex;
			flex-direction: column;
			align-items: center;
			padding: 16px;
			background-color: #f0f0f0;
			border: 1px solid #ddd;
			border-radius: 8px;
			font-family: Arial, sans-serif;
		}
		h1 {
			margin-top: 0;
			font-size: 28px;
			font-weight: bold;
			margin-bottom: 24px;
		}
		.info {
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			margin-bottom: 16px;
		}
		.info label {
			font-weight: bold;
			margin-right: 8px;
			min-width: 120px;
			text-align: right;
			font-size: 18px;
		}
		.info span {
			font-size: 18px;
		}
		.product {
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 8px;
			border-bottom: 1px solid #ddd;
			width: 100%;
			font-size: 18px;
		}
		.product:last-child {
			border-bottom: none;
		}
		.total {
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 8px;
			font-weight: bold;
			width: 100%;
			font-size: 24px;
			margin-top: 24px;
			border-top: 1px solid #ddd;
			border-bottom: 1px solid #ddd;
		}
		.button {
			background-color: #FFA500;
			color: white;
			border: none;
			padding: 12px 20px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 16px;
			margin-top: 24px;
			cursor: pointer;
			border-radius: 4px;
			transition: background-color 0.3s ease;
		}
		
		.button:hover {
				background-color: #FFA500;
		}
	</style>
</head>
<div class="ctn">
		<h1>Bill</h1>
		<div class="info">
			<label>Customer:</label>
			<span>Nguyễn Văn A</span>
		</div>
		<div class="info">
			<label>Address:</label>
			<span>Hà nội</span>
		</div>
		<div class="info">
			<label>Phone number:</label>
			<span>0123456789</span>
		</div>
		<div class="info">
			<label>Email:</label>
			<span>nguyenvana@example.com</span>
		</div>
		
		<div class="product">
			<span>Áo thun nam x 2</span>
			<span>400.000 đ</span>
		</div>
		<div class="product">
			<span>Quần jean nữ x 1</span>
			<span>300.000 đ</span>
		</div>
		<div class="total">
			<span>Total:</span>
			<span>700.000 đ</span>
		</div>
	<button class="button">Print invoice</button>
	</div>